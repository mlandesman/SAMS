{
  "name": "sams-functions",
  "description": "Cloud Functions for SAMS - Exchange Rates + API Backend",
  "type": "module",
  "scripts": {
    "lint": "echo 'No linting configured'",
    "serve": "firebase emulators:start --only functions,hosting",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:api": "firebase deploy --only functions:api",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.1",
    "js-yaml": "^4.1.0",
    "luxon": "^3.7.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
